{
  "name": "shadowcache",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "description": "Modern offline-first caching engine with predictive intelligence",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:prod": "set NODE_ENV=production&& npm run build --workspaces",
    "build:analyze": "npm run build:prod && node scripts/analyze-bundle.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.19.10",
    "fast-check": "^3.15.0",
    "jsdom": "^27.2.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
